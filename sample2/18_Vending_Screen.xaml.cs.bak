        int dispensed_item_quant = 0;
        private void Display_PLC_Status(string display_data)
        {
            switch (display_data)
            {
                case "R1":
                    if (product_quantities > 0)
                    {
                        this.dispensed_qty.Text = "" + dispensed_item_quant;
                        product_vending_status.Text = "Starting...";
                        if (previous_cell_number > 0)
                            PLC_CmdSend(send_PLC_Coil_Status_request(previous_cell_number), response_previous_Coil_status_PLC);
                        else
                            PLC_CmdSend(send_PLC_Coil_Status_request(cell_number), response_Coil_status_PLC);
                        product_quantities--; 
                    }
                    else { start_next_product_delivery(); dispensed_item_quant = 0; }
                    break;
                case "R2":
                    product_vending_status.Text = "Intialising...";
                    PLC_CmdSend(send_PLC_Register_Write_request(), response_register_write_PLC);
                    break;
                case "R3":
                    product_vending_status.Text = "Intialising...";
                    temp_cell_number = previous_cell_number;
                    PLC_CmdSend(send_PLC_Coil_Status_request(cell_number), response_Coil_status_PLC);
                    break;

                case "FBC":
                    product_vending_status.Text = "Intialising...";
                    PLC_CmdSend(send_PLC_Feedback_Status(), response_feedback_status_PLC);
                    break;

                case "FBE":
                    product_vending_status.Text = "Continous Motor Error! FBE! Contact the support team: " + SqliteDataAccess.getHelplineNumber();
                    //button_visible();
                    //PLC_CmdSend(send_PLC_Coil_Stop_Status_request(previous_cell_number), response_Coil_Write_PLC);
                    //SqliteDataAccess.disableAllProducts();
                    break;

                case "E1":
                    product_vending_status.Text = "Motor Error! Contact the support team: " + SqliteDataAccess.getHelplineNumber();
                    //button_visible();
                    //PLC_CmdSend(send_PLC_Coil_Stop_Status_request(previous_cell_number), response_Coil_Write_PLC);
                    break;
                case "Run":
                    product_vending_status.Text = "Vending...";
                    PLC_CmdSend(send_PLC_Coil_Write_request(cell_number), response_Coil_Write_PLC);
                    dispensed_item_quant++;

                    break;
                case "W":
                    Thread.Sleep(1000);
                    product_vending_status.Text = "Vending...";
                    if (previous_cell_number != temp_cell_number)
                        PLC_CmdSend(send_PLC_Coil_Wait_Status_request(previous_cell_number), response_previous_Coil_status_PLC);
                    else
                        PLC_CmdSend(send_PLC_Coil_Wait_Status_request(cell_number), response_Coil_status_PLC);
                    break;
                default:
                    product_vending_status.Text = "Error -- " + display_data;
                    break;
            }


        }

        private static List<byte> ModRTU_CRC(List<byte> data)
        {
            List<byte> checksum = new List<byte>();
            ushort crc = 0xFFFF;

            for (int i = 0; i < data.Count; i++)
            {
                crc ^= data[i];          // XOR byte into least sig. byte of crc

                for (int j = 0; j < 8; j++)
                {    // Loop over each bit
                    if ((crc & 0x01) == 1)
                        crc = (ushort)((crc >> 1) ^ 0xA001);                    // Shift right and XOR 0xA001
                    else                            // Else LSB is not set
                        crc = (ushort)(crc >> 1);                    // Just shift right
                }
            }

            checksum.Add((byte)((crc >> 8) & 0xFF));
            checksum.Add((byte)(crc & 0xFF));
            return checksum;
        }

